{
  "name": "calc",
  "version": "0.1.0",
  "author": "Andrea Zanin",
  "homepage": "./",
  "description": "Editor for calc files",
  "main": "public/electron.js",
  "build": {
    "appId": "com.baida.calc",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@electron-forge/maker-dmg": "^6.0.0-beta.54",
    "electron-is-dev": "^0.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.2",
    "react-simple-code-editor": "^0.11.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-plugin-serve": "^1.2.1"
  },
  "lint-staged": {
    "{{public,src}/**/*.{scss,js,json},package.json}": [
      "prettier --write \"{{public,src}/**/*.{scss,js,json},package.json}\"",
      "git add"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "pretty": "prettier --write \"{{public,src}/**/*.{css,scss,js,json},package.json}\"",
    "precommit": "lint-staged",
    "electron-dev": "concurrently \"export BROWSER=none && yarn start\" \"wait-on http://localhost:3000 && electron-forge start\"",
    "premake": "yarn build",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "concurrently": "^3.5.0",
    "electron": "^1.7.5",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.4",
    "wait-on": "^2.0.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Calc Notebook",
        "icon": "./public/fs_notes.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "calc"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO"
          }
        }
      ]
    }
  }
}
